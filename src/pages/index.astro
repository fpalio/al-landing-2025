---
import Layout from '../components/Layout.astro';
import GrowLoyaltySection from '../components/GrowLoyaltySection.astro';
import Button from '../components/Button.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('meta.title.home')} currentPage="home">
	<!-- HERO SECTION -->
	<section class="relative bg-brand-blue hero-section mb-10 lg:mb-[150px]">
		<!-- Mobile Layout -->
		<div class="block px-4 py-16 lg:hidden">
			<!-- Hero Content -->
			<div class="relative hero-card">
				<!-- Background Image with Overlay -->
				<div class="overflow-hidden mb-8 h-64 rounded-xl">
					<div 
						class="absolute inset-0 rounded-xl hero-bg"
						style="background-image: url('/img/index_hero.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;"
					></div>
					<div class="absolute inset-0 bg-gradient-to-t rounded-xl from-black/87 via-black/40 to-black/19"></div>
				</div>
				
				<!-- Content -->
				<div class="space-y-6 text-white">
					<div class="space-y-4">
						<h1 class="text-4xl font-semibold leading-tight sm:text-5xl hero-text" data-hero-animate>
							{t('home.hero.title')}
						</h1>
						<p class="text-lg font-medium leading-relaxed sm:text-xl" data-hero-animate>
							{t('home.hero.subtitle')}
						</p>
					</div>
					<p class="text-base font-medium leading-relaxed opacity-90" data-hero-animate>
						{t('home.hero.description')}
					</p>
					<Button 
						text={t('home.hero.cta_button')}
						variant="primary"
						size="md"
						href={lang === 'en' ? '/contact' : `/${lang}/contact`}
						fullWidth={true}
						className="sm:w-auto hero-button"
						dataAttribute="data-hero-animate"
					/>
				</div>
			</div>
		</div>

		<!-- Desktop Layout (Original) -->
		<div class="hidden lg:block h-[723px] relative">
			<!-- Social Media Icons -->
			<div class="absolute right-[90px] top-[514px] flex flex-col gap-[7px] z-10 float-element">
				<div class="bg-white/10 p-[10.5px] rounded-[28px] w-14 h-14 flex items-center justify-center hover:bg-white/20 transition-colors">
