---
import Button from './Button.astro';

export interface Props {
	t: (key: string) => string;
}

const { t } = Astro.props;
---

<section class="py-2">
	<!-- Desktop Version (Large screens) -->
	<div class="hidden xl:block">
		<div class="relative bg-brand-red rounded-3xl mx-[20px] h-[290px] overflow-hidden">
			<!-- Background Image Overlay -->
			<div class="absolute inset-0">
				<img 
					src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80" 
					alt={t('grow_loyalty.background_alt')} 
					class="w-full h-full object-cover opacity-10"
				/>
			</div>
			
			<!-- Content -->
			<div class="relative z-10 flex flex-row gap-[196px] items-center justify-center h-full px-16">
				<!-- Left Content -->
				<div class="flex flex-col gap-6 text-white h-[142px]">
					<h2 class="text-[58px] font-semibold leading-[57px] tracking-[-1.16px] capitalize w-[900px]">
						{t('grow_loyalty.heading')}
					</h2>
					<div class="text-[18px] leading-[28px] opacity-80 w-[639px] tracking-[0.18px]">
						<p class="mb-0">{t('grow_loyalty.description')}</p>
					</div>
				</div>
				
				<!-- Right Button -->
				<Button 
					text={t('grow_loyalty.cta_button')}
					variant="secondary"
					size="xl"
					href="/contact"
					iconSize="lg"
					className="tracking-[-1px] w-[222px] h-[90px]"
				/>
			</div>
		</div>
	</div>

	<!-- Tablet Version (iPad and similar) -->
	<div class="hidden md:block xl:hidden">
		<div class="relative bg-brand-red rounded-3xl mx-[20px] h-[380px] overflow-hidden">
			<!-- Background Image Overlay -->
			<div class="absolute inset-0">
				<img 
					src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80" 
					alt={t('grow_loyalty.background_alt')} 
					class="w-full h-full object-cover opacity-10"
				/>
			</div>
			
			<!-- Content -->
			<div class="relative z-10 flex flex-col gap-8 items-center justify-center h-full px-8 py-8">
				<!-- Text Content -->
				<div class="flex flex-col gap-6 text-white text-center">
					<h2 class="text-[48px] font-semibold leading-[50px] tracking-[-1px] capitalize">
						{t('grow_loyalty.heading')}
					</h2>
					<div class="text-[16px] leading-[26px] opacity-80 max-w-[500px] tracking-[0.16px]">
						<p class="mb-0">{t('grow_loyalty.description')}</p>
					</div>
				</div>
				
				<!-- Button -->
				<Button 
					text={t('grow_loyalty.cta_button')}
					variant="secondary"
					size="lg"
					href="/contact"
					iconSize="md"
					className="tracking-[-1px] w-[250px] h-[80px] text-[18px]"
				/>
			</div>
		</div>
	</div>

	<!-- Mobile Version -->
	<div class="block md:hidden">
		<div class="relative bg-brand-red rounded-[20px] mx-[20px] h-[505px] overflow-hidden">
			<!-- Background Image Overlay -->
			<div class="absolute inset-0">
				<img 
					src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80" 
					alt={t('grow_loyalty.background_alt')} 
					class="w-full h-full object-cover opacity-10"
				/>
			</div>
			
			<!-- Content -->
			<div class="relative z-10 flex flex-col gap-[26px] items-start justify-start h-full px-[31px] py-[30px]">
				<!-- Text Content -->
				<div class="flex flex-col gap-[13.3px] text-white w-full">
					<h2 class="font-archivo font-semibold text-[51.3px] leading-[54px] tracking-[-1.03px] capitalize">
						{t('grow_loyalty.heading')}
					</h2>
					<div class="font-poppins text-[15.9px] leading-[24.8px] opacity-80 tracking-[0.16px] w-[280.5px]">
						<p class="mb-0">{t('grow_loyalty.description')}</p>
					</div>
				</div>
				
				<!-- Button -->
				<Button 
					text={t('grow_loyalty.cta_button')}
					variant="secondary"
					size="lg"
					href="/contact"
					iconSize="lg"
					className="tracking-[-1px] w-[285px] h-[75px] text-[20px] gap-2.5"
				/>
			</div>
		</div>
	</div>
</section> 